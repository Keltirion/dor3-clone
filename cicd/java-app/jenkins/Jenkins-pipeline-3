pipeline {
  agent {
     node { 
        label 'node'
     } 
  }
  options { 
      timestamps()
      skipDefaultCheckout(true) }
  tools {
    maven 'maven-apache'
  }
  stages {
    stage('Build') {
      steps {
        sh 'FILE=$(date +"%S-%M-%H-%m-%d-%y")'
        sh 'echo $FILE > date.txt'
      }
    }
    stage('archiveArtifacts') {
    } 
    stage('Validation') {
    }
    stage('Deploy') {
        steps {  
            java --version && node -v
            if ($? != 0) {
                error "Missing component"
            }
        }
    }
  post {
    always {
      }
    }
  }
}